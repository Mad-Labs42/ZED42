# ZED42 Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Development Phase: OpenRouter API Configuration
OPENROUTER_API_KEY=your_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Primary model for complex reasoning (architecture, refactoring)
PRIMARY_MODEL=qwen/qwen-2.5-coder-32b-instruct

# Fast model for simple edits, autocomplete, validations
FAST_MODEL=deepseek/deepseek-coder-6.7b-instruct

# Embedding model for semantic search
EMBEDDING_MODEL=text-embedding-3-small

# Future: Local models configuration (after hardware upgrade)
USE_LOCAL_MODELS=false
LOCAL_MODELS_PATH=./models

# Database Configuration
DATABASE_PATH=./data/zed42.db
SESSION_DB_PATH=./data/sessions
ARCHIVE_PATH=./data/archive

# Logging
RUST_LOG=info
ZED42_LOG_LEVEL=debug

# Performance Tuning
MAX_CONCURRENT_AGENTS=20
MEMORY_LIMIT_GB=80
CONFIDENCE_THRESHOLD=0.7

# Workspace Settings
DEFAULT_WORKSPACE=./workspace
ENABLE_SANDBOX=true
